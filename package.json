{
  "name": "scaffold-kit-quality-testing",
  "version": "2.0.0-alpha.0",
  "description": "Unit test tools for scaffold kit projects.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest",
    "test-cov": "jest --coverage",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhangkaiyulw/scaffold-kit-quality-testing.git"
  },
  "keywords": [
    "scaffold"
  ],
  "author": "Zhang Kai Yu <yeannylam@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zhangkaiyulw/scaffold-kit-quality-testing/issues"
  },
  "homepage": "https://github.com/zhangkaiyulw/scaffold-kit-quality-testing#readme",
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "fs-extra": "^7.0.1",
    "glob": "^7.1.3",
    "mkdirp": "^0.5.1",
    "scaffold-kit": "file:../scaffold-kit"
  },
  "peerDependencies": {
    "scaffold-kit": "^2.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.0.0",
    "@types/glob": "^7.1.1",
    "@types/jest": "^24.0.15",
    "@types/lodash": "^4.14.136",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^12.6.8",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  }
}
